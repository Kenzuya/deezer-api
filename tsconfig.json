{
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    // so that if your project isn't using TypeScript, it still has autocomplete
    "allowJs": true,
    "removeComments": true,
    // "bun-types" is the important part
    // "types": ["bun-types"]
  }
}
